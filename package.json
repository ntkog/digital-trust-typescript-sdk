{
  "name": "@gruposantander/rp-client-typescript",
  "version": "0.4.1",
  "description": "",
  "main": "lib/api.js",
  "types": "lib/api.d.ts",
  "scripts": {
    "lint-fix": "./node_modules/.bin/tslint -c tslint.json 'src/**/*.ts' --fix",
    "lint": "./node_modules/.bin/tslint -c tslint.json 'src/**/*.ts'",
    "clean": "rm -rf lib/*",
    "prepare": "npm run build",
    "build": "./node_modules/.bin/tsc",
    "test": "./node_modules/.bin/jest",
    "test-coverage": "./node_modules/.bin/jest --coverage",
    "print-coverage": "echo \"Coverage: $(cat coverage/lcov-report/index.html |grep %|head -n1)\"",
    "test-watch": "./node_modules/.bin/jest --watch"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "^.+\\.spec\\.ts$"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:gruposantander/digital-trust-typescript-sdk.git"
  },
  "keywords": [],
  "author": "Santander UK",
  "dependencies": {
    "@types/jest": "^25.1.3",
    "@types/nanoid": "^2.1.0",
    "@types/jwt-decode": "^2.2.1",
    "@types/node-jose": "^1.1.5",
    "axios": "^0.19.2",
    "base64url": "^3.0.1",
    "nanoid": "^2.1.11",
    "jwt-decode": "^2.2.0",
    "node-jose": "^2.0.0",
    "tslib": "^1.11.1"
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "lodash": "^4.17.19",
    "ts-jest": "^25.2.1",
    "ts-mockito": "^2.5.0",
    "tslint": "^6.0.0",
    "typescript": "3.5.3",
    "jest": "^25.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  }
}
